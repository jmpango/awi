<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inner_banner_dv"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/banner_bg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/magin_5"
        android:contentDescription="@string/logo_desc"
        android:src="@drawable/logo" />

    <LinearLayout
        android:id="@+id/nav_top_dv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="123dp"
        android:contentDescription="@string/default_desc" >

        <include layout="@layout/navigation_divider" />

        <ImageButton
            android:id="@+id/imageButton1"
            style="@style/ActionbarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/default_desc"
            android:src="@drawable/nav_home_ico" />

        <include layout="@layout/navigation_divider" />

        <ImageButton
            android:id="@+id/nav_refresh_btn"
            style="@style/ActionbarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/default_desc"
            android:src="@drawable/nav_refresh_ico" />
    </LinearLayout>

</LinearLayout>
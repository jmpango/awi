<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inner_search_dv"
    android:layout_width="fill_parent"
    android:layout_height="35dip"
    android:background="@color/search_dv_bg"
    android:baselineAligned="false"
    android:gravity="center_vertical" >

    <ImageButton
        android:id="@+id/search_btn"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/magin_5"
        android:background="@drawable/search_ico"
        android:contentDescription="@string/default_desc" />

    <EditText
        android:id="@+id/search_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/search_box_bg"
        android:hint="@string/search_hint"
        android:maxLines="1"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:singleLine="true"
        android:textSize="15sp" >
    </EditText>

</LinearLayout>